{
	"name": "save-from-context-menu",
	"displayName": "Save From Context Menu",
	"description": "Save and Save All from the context menu",
	"icon": "images/icon.png",
	"version": "0.0.2",
	"publisher": "kosmos434",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Programming Languages", "Other"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/kosmos434/vscode-context-save"
	},
	"activationEvents": [
		"*"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [{
				"command": "save-from-context-menu.Save",
				"title": "Save"
			},
			{
				"command": "save-from-context-menu.SaveAll",
				"title": "Save All"
			}
		],
		"menus": {
			"editor/context": [{
					"when": "editorFocus",
					"command": "save-from-context-menu.Save",
					"group": "savegroup"
				},
				{
					"when": "editorFocus",
					"command": "save-from-context-menu.SaveAll",
					"group": "savegroup"
				},
				{
					"when": "editorFocus",
					"command": "save-from-context-menu.SaveAs",
					"group": "savegroup"
				}
			]
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}